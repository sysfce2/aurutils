#!/bin/bash
# aur-fetch-git - retrieve build files using git
set -o errexit
readonly argv0=fetch-git
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'

# default options
log_dir=/dev/stdout

merge_upstream() {
    git fetch -v >&2

    if [[ $(git rev-parse HEAD) != $(git rev-parse '@{upstream}') ]]; then
        # only print log on upstream changes
        git --no-pager log --patch --stat '..@{upstream}' >> "${1:-/dev/stdout}"
        git merge --no-edit >&2
    fi
}

merge_across_fs() {
    # avoid issues with filesystem boundaries (#274)
    GIT_DIR="$PWD/$1"/.git GIT_WORK_TREE="$PWD/$1" merge_upstream "$2"
}

usage() {
    printf -- >&2 'usage: %s [-L log_dir]\n' "$argv0"
    exit 1
}

while getopts :L: opt; do
    case $opt in
        L) log_dir=$OPTARG ;;
        *) usage   ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

if [[ -d $log_dir ]]; then
    merge() { merge_across_fs "$1" "$log_dir/$1".patch; }
elif [[ $log_dir == /dev/stdout ]]; then
    merge() { merge_across_fs "$1"; }
else
    printf -- >&2 '%s: %q: not a directory or /dev/stdout\n' "$argv0" "$log_dir"
    exit 1
fi

while IFS= read -r uri; do
    pkg=${uri##*/}   # strip path
    pkg=${pkg%%.git} # strip .git suffix

    if [[ -d $pkg/.git ]]; then
        merge "$pkg"
    else
        git clone "$uri"
    fi
done

# vim: set et sw=4 sts=4 ft=sh:
